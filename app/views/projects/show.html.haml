.row-fluid
	.sideNav.lead
		%ul.active Overview
		%ul
			Phase
			- @phases.each do |phase|
				%li.active= phase.name
		%ul.active Options
		%ul.active Contract
.sideNavcontent
	.row-fluid
		.span12
			.row-fluid
				.span1
				.page-header.pagination-centered.span10
					%h1= link_to @project.name, project_partial_path(@project.id, @project.phase.name, "posts")
					.btn-group
						%button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
							Phase
							%span.caret
						%ul.dropdown-menu
							- ['what','who','when'].each do |phase|
								%li= link_to phase, "#"
				.span1
			/ Progress Bar
			.row-fluid
				.span1
				.progress.progress-striped.success.span10
					.bar{:style => "width: #{@project.phase.progress_level}%;"}
				.span1
			/ The five phases
			.row-fluid
				.span1
				- @phases.each do |phase|
					.span2.pagination-centered.phase
						%div{:class => 'active'}= link_to phase.name, "#"
				.span1
			.row-fluid
				.span1
				.span10
					%h2
						= @project.phase.name.capitalize + " Phase"
						%small= link_to 'add post', project_partial_path(@project.id, @project.phase.name, 'new_post')
				.span1
			= if @show_partial then render "projects/show_partials/#{@show_partial}" else render "projects/show_partials/posts"  end













